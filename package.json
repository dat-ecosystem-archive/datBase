{
  "name": "dat-land",
  "version": "1.0.3",
  "description": "An online place for dats.",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/datproject/dat.land.git"
  },
  "bugs": {
    "url": "https://github.com/datproject/dat.land/issues"
  },
  "main": "server/index.js",
  "bin": "server/cli.js",
  "browser": {
    "server/**/**/*": false
  },
  "browserify": {
    "transform": [
      [
        "sheetify/transform",
        {
          "use": "sheetify-nested"
        }
      ]
    ]
  },
  "scripts": {
    "server": "node ./server/cli",
    "lint": "standard",
    "clean-test": "rm -rf tests/archiver && rm -rf tests/township.db && rm -rf tests/unit/*.sqlite",
    "test": "standard && npm run clean-test && NODE_ENV=test tape tests/unit/*.js | tap-spec",
    "start": "npm run watch-js & npm run watch-css & npm run watch-server",
    "render": "node bin/render-static.js",
    "watch-render": "nodemon --watch public -i public/rendered -e html bin/render-static",
    "watch-css": "nodemon --watch client -e scss -x \"npm run build-css\"",
    "watch-js": "watchify --fast --verbose -t brfs -g [ babelify --blacklist strict  ] client/js/app.js -o public/js/app.js",
    "watch-server": "nodemon server/cli --watch server --watch client",
    "build": "npm run build-js && npm run build-css",
    "build-css": "node-sass --importer node_modules/node-sass-magic-importer client/scss/app.scss public/css/app.css",
    "build-js": "mkdir -p public/js && browserify -t brfs -g [ babelify --blacklist strict  ] client/js/app.js > public/js/app.js",
    "build-js-prod": "mkdir -p public/js && NODE_ENV=production node --max-executable-size=2000 ./node_modules/.bin/browserify -g [ babelify --blacklist strict  ] -t brfs -t envify client/js/app.js > public/js/app.js",
    "minify": "npm run minify-css && npm run minify-js",
    "minify-css": "minify public/css/app.css > public/css/app.min.css",
    "minify-js": "uglifyjs public/js/app.js -o public/js/app.min.js",
    "version": "./bin/git-sha.js && ./bin/version-assets.js"
  },
  "standard": {
    "ignore": [
      "public/**"
    ]
  },
  "devDependencies": {
    "dat-node": "^2.0.0",
    "marked": "^0.3.6",
    "nodemon": "^1.10.0",
    "request": "^2.79.0",
    "rimraf": "^2.5.4",
    "standard": "^7.1.2",
    "tap-spec": "^4.1.1",
    "tape": "^4.6.3",
    "watchify": "~3.6.0"
  },
  "dependencies": {
    "async": "^2.1.4",
    "babel-preset-es2015": "^6.18.0",
    "babelify": "^5.0.0",
    "body-parser": "^1.15.2",
    "bole": "^3.0.1",
    "brfs": "^1.4.3",
    "browserify": "^13.0.0",
    "choo": "^4.1.0",
    "clipboard": "^1.6.1",
    "collect-stream": "^1.1.1",
    "compression": "^1.6.2",
    "dat-colors": "^3.4.0",
    "dat-design": "^5.0.0",
    "dat-encoding": "^4.0.1",
    "dat-icons": "^2.1.0",
    "dat-registry": "^2.0.0",
    "dat-swarm-defaults": "^1.0.0",
    "discovery-swarm": "^4.2.0",
    "drag-drop": "^2.11.0",
    "envify": "^4.0.0",
    "es6-promise": "^3.3.1",
    "express": "^4.14.0",
    "express-simple-redirect": "^1.0.1",
    "extend": "^3.0.0",
    "file-saver": "^1.3.2",
    "from2": "^2.3.0",
    "get-form-data": "^1.2.5",
    "gravatar": "^1.6.0",
    "hypercore-archiver": "git://github.com/karissa/hypercore-archiver#v5",
    "hyperdrive": "^8.0.0",
    "hyperdrive-http": "^4.0.0",
    "intro.js": "^2.1.0",
    "is-my-json-valid": "^2.15.0",
    "jszip": "^3.1.2",
    "knex": "^0.12.6",
    "level-party": "^3.0.4",
    "marked": "^0.3.6",
    "mime": "^1.3.4",
    "minifier": "^0.8.0",
    "nets": "^3.2.0",
    "node-sass": "^3.8.0",
    "node-sass-magic-importer": "^0.1.4",
    "node-version-assets": "^1.1.0",
    "nodemailer-mock-transport": "^1.3.0",
    "nodemailer-postmark-transport": "^1.1.0",
    "pretty-bytes": "^3.0.1",
    "pump": "^1.0.2",
    "random-access-file": "^1.5.0",
    "random-access-memory": "^2.4.0",
    "range-parser": "^1.2.0",
    "relative-date": "^1.1.3",
    "render-data": "^2.2.0",
    "response": "^0.18.0",
    "serialize-javascript": "^1.3.0",
    "sheetify": "^6.0.1",
    "sheetify-nested": "^1.0.2",
    "sqlite3": "^3.1.8",
    "township": "^2.0.0",
    "township-client": "^1.2.2",
    "township-reset-password-token": "^1.0.0",
    "uglifyjs": "^2.4.10",
    "uparams": "^1.3.1",
    "uuid": "^3.0.1",
    "xtend": "^4.0.1",
    "yo-fs": "^3.0.1"
  }
}
