{
  "name": "dat-land",
  "version": "1.2.3",
  "description": "An online place for dats.",
  "license": "MIT",
  "main": "src/js/app.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/datproject/dat.land.git"
  },
  "bugs": {
    "url": "https://github.com/datproject/dat.land/issues"
  },
  "scripts": {
    "dev": "npm run watch & npm start",
    "start": "http-server .",
    "lint": "standard",
    "test": "standard",
    "test:e2e": "nightwatch --env chrome,chrome",
    "test:e2e:firefox": "nightwatch --env firefox,firefox",
    "watch": "npm run watch-js & npm run watch-css",
    "watch-css": "nodemon -e scss -x \"npm run build-css\"",
    "watch-js": "watchify src/js/app.js -o public/js/app.js",
    "build": "npm run build-js && npm run build-css",
    "build-css": "node-sass --importer node_modules/node-sass-magic-importer src/scss/main.scss public/css/main.css",
    "build-js": "browserify src/js/app.js > public/js/app.js",
    "minify": "npm run minify-css && npm run minify-js",
    "minify-css": "minify public/css/main.css > public/css/main.min.css",
    "minify-js": "uglifyjs public/js/app.js -o public/js/app.min.js",
    "version": "./bin/git-sha.js && ./bin/version-assets.js",
    "deploy": "shipit uat deploy && shipit uat install && shipit uat restart"
  },
  "devDependencies": {
    "brfs": "^1.4.3",
    "browserify": "^13.0.0",
    "chromedriver": "^2.21.2",
    "concat-stream": "^1.5.1",
    "dat-button": "^2.3.0",
    "dat-design": "^1.2.11",
    "dat-encoding": "^2.0.2",
    "dat-header": "^1.0.5",
    "drag-drop": "^2.11.0",
    "es2020": "^1.1.7",
    "gh-pages-deploy": "^0.4.2",
    "http-server": "^0.9.0",
    "hyperdrive-archive-swarm": "^3.0.1",
    "hyperdrive-import-queue": "^1.0.0",
    "hyperdrive-ui": "^2.0.0",
    "intro.js": "^2.1.0",
    "level-browserify": "^1.1.0",
    "memdb": "^1.3.1",
    "minidux": "^1.0.1",
    "minifier": "^0.7.1",
    "nightwatch": "^0.9.5",
    "node-sass": "^3.8.0",
    "node-sass-magic-importer": "^0.1.4",
    "node-version-assets": "^1.1.0",
    "pretty-bytes": "^3.0.1",
    "selenium-server-standalone-jar": "^2.53.1",
    "shipit-deploy": "^2.2.0",
    "speedometer": "^1.0.0",
    "standard": "^7.1.2",
    "uglify-js": "^2.7.0",
    "watchify": "~3.6.0",
    "wzrd": "^1.3.1",
    "yo-yo": "^1.2.2",
    "hyperdrive": "^7.0.0",
    "yo-yoify": "^3.1.0"
  }
}
