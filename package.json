{
  "name": "dat-land",
  "version": "1.2.3",
  "description": "An online place for dats.",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/datproject/dat.land.git"
  },
  "bugs": {
    "url": "https://github.com/datproject/dat.land/issues"
  },
  "main": "server/index.js",
  "browser": {
    "server/**/*": false
  },
  "scripts": {
    "dev": "npm run watch",
    "start": "node ./server",
    "lint": "standard",
    "test": "standard",
    "test:e2e": "nightwatch --env chrome,chrome",
    "test:e2e:firefox": "nightwatch --env firefox,firefox",
    "watch": "npm run watch-js & npm run watch-css & npm run watch-server",
    "watch-css": "nodemon -e scss -x \"npm run build-css\"",
    "watch-js": "watchify --debug -g es2040 client/js/app.js -o public/js/app.js",
    "watch-server": "nodemon --watch server --watch client",
    "build": "npm run build-js && npm run build-css",
    "build-css": "node-sass --importer node_modules/node-sass-magic-importer client/scss/main.scss public/css/main.css",
    "build-js": "browserify -g es2040 client/js/app.js > public/js/app.js",
    "minify": "npm run minify-css && npm run minify-js",
    "minify-css": "minify public/css/main.css > public/css/main.min.css",
    "minify-js": "uglifyjs public/js/app.js -o public/js/app.min.js",
    "version": "./bin/git-sha.js && ./bin/version-assets.js",
    "deploy": "shipit prod deploy && shipit prod install && shipit prod restart",
    "deploy-uat": "shipit uat deploy && shipit uat install && shipit uat restart"
  },
  "standard": {
    "ignore": [
      "public/**"
    ]
  },
  "devDependencies": {
    "browserify": "^13.0.0",
    "chromedriver": "^2.21.2",
    "dat-design": "^1.4.2",
    "drag-drop": "^2.11.0",
    "es2040": "^1.2.3",
    "minifier": "^0.8.0",
    "nightwatch": "^0.9.5",
    "node-sass": "^3.8.0",
    "node-sass-magic-importer": "^0.1.4",
    "node-version-assets": "^1.1.0",
    "nodemon": "^1.10.0",
    "selenium-server-standalone-jar": "^2.53.1",
    "shipit-deploy": "^2.2.0",
    "speedometer": "^1.0.0",
    "standard": "^7.1.2",
    "uglify-js": "^2.7.0",
    "watchify": "~3.6.0"
  },
  "dependencies": {
    "choo": "^3.2.0",
    "collect-stream": "^1.1.1",
    "dat-encoding": "^3.0.0",
    "datland-swarm-defaults": "^1.0.2",
    "discovery-swarm": "^4.0.2",
    "extend": "^3.0.0",
    "file-saver": "^1.3.2",
    "from2": "^2.3.0",
    "hyperdrive": "^7.5.0",
    "hyperdrive-archive-swarm": "^4.0.0",
    "hyperdrive-import-queue": "^2.0.0",
    "hyperdrive-ui": "^4.0.0",
    "intro.js": "^2.1.0",
    "jszip": "^3.1.2",
    "level": "^1.4.0",
    "lru": "^3.1.0",
    "memdb": "^1.3.1",
    "pretty-bytes": "^3.0.1",
    "relative-date": "^1.1.3",
    "render-data": "^2.2.0",
    "serialize-javascript": "^1.3.0",
    "server-router": "^2.1.0",
    "through-timeout": "^1.0.0",
    "uparams": "^1.3.1"
  }
}
